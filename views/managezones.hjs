<!DOCTYPE html>
<html>
<head>
  <title>Manage Zones</title>
  <link rel="stylesheet" href="/styles/bootstrap.min.css" />
  <link rel="stylesheet" href="/styles/style.css" />
  <style>
    .table-container {
      margin: 20px auto;
      max-width: 800px;
    }
    .table-container table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0;
    }
    .table-container th,
    .table-container td {
      padding: 15px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
    .table-container th {
      background-color: #333;
      color: #fff;
    }
    .table-container td:last-child {
      text-align: center;
    }
    .update-btn {
      padding: 8px 12px;
      font-size: 14px;
      font-weight: 500;
      line-height: 1.42857143;
      text-align: center;
      white-space: nowrap;
      vertical-align: middle;
      cursor: pointer;
      background-color: #337ab7;
      color: #fff;
      border: none;
      border-radius: 4px;
    }
    .update-btn:hover {
      background-color: #286090;
    }
  </style>
  <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
  <script src="/js/bootstrap.min.js" type="text/javascript"></script>
  <script>
    $(document).ready(function() {
      $(".update-btn").click(function() {
        var zoneId = $(this).data("zone-id");
        var newPrice = prompt("Enter the new price for Zone ID: " + zoneId);
        if (newPrice) {
          $.ajax({
            url: "/api/v1/zones/" + zoneId,
            type: "PUT",
            data: { price: newPrice },
            success: function(response) {
              alert(response.message);
              location.reload();
            },
            error: function(xhr, status, error) {
              alert("Error updating the zone price: " + error);
            }
          });
        }
      });
    });
  </script>
</head>
<body>
  <div>
    <div>
      <!-- Navbar -->
      <nav class="navbar navbar-inverse" style="padding-left: 130px;">
        <ul class="nav navbar-nav">
          <li><a href="/dashboard">Home</a></li>
          <li class="active"><a href="/managezones">Zones</a></li>
        </ul>
      </nav>
    </div>
    <br />
    <div class="container">
      <div class="table-container">
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Zone Type</th>
              <th>Price</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            {{#zones}}
            <tr>
              <td>{{id}}</td>
              <td>{{zonetype}}</td>
              <td>{{price}}</td>
              <td>
                {{#isAdmin}}
                <button class="update-btn" data-zone-id="{{id}}">Update</button>
                {{/isAdmin}}
              </td>
            </tr>
            {{/zones}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>
