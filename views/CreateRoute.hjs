<!DOCTYPE html>
<html>
<head>
  <title>Create Route</title>
  <!-- Make sure the CSS files are accessible -->
  <link rel="stylesheet" href="/styles/bootstrap.min.css" />
  <link rel="stylesheet" href="/styles/style.css" />
</head>
<body>
  <div>
    <div>
      <nav class="navbar navbar-inverse" style="padding-left:130px;">
        <ul class="nav navbar-nav">
          <li><a href="/dashboard">Home</a></li>
          <li><a href="/routes">Routes</a></li>
          <li class="active"><a href="/createroute">Create Route</a></li>
        </ul>
      </nav>
    </div>
    <br />
    <div class="container">
      <h2>Create Route</h2>
      <form id="createrouteForm">
        <div class="form-group">
          <label for="name">Name:</label>
          <input type="text" class="form-control" id="name" name="routeName" required>
          <label for="newStationId">New stationId:</label>
          <input type="text" class="form-control" id="newStationId" name="newStationId" required>
          <label for="connectedStationId">Connected StationId:</label>
          <input type="text" class="form-control" id="connectedStationId" name="connectedStationId" required>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
      </form>
    </div>
    <br />
    <div class="container">
      <h2>Stations</h2>
      <table id="stationsTable" class="table">
        <thead>
          <tr>
            <th scope="col">id</th>
            <th scope="col">stationname</th>
            <th scope="col">stationtype</th>
            <th scope="col">stationposition</th>
            <th scope="col">stationstatus</th>
          </tr>
        </thead>
        <tbody>
          {{#stations}} 
            <tr>
              <td>{{id}}</td>
              <td>{{stationname}}</td>
              <td>{{stationtype}}</td>
              <td>{{stationposition}}</td>
              <td>{{stationstatus}}</td>
            </tr>
          {{/stations}}
        </tbody>
      </table>
    </div>
  </div>

  <!-- Make sure the JavaScript files are accessible -->
  <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
  <script src="/js/bootstrap.min.js" type="text/javascript"></script>
  <script>
    function getStations() {
      $.ajax({
        type: "GET",
        url: "/viewStations",
        success: function(stations) {
          renderStationsTable(stations);
        },
        error: function(errorResponse) {
          alert(`Error fetching stations: ${errorResponse.responseText}`);
        }
      });
    }

    function renderStationsTable(stations) {
      const tableBody = $('#stationsTable tbody');
      tableBody.empty();

      stations.forEach(function(station) {
        const row = `<tr>
          <td>${station.id}</td>
          <td>${station.stationname}</td>
          <td>${station.stationtype}</td>
          <td>${station.stationposition}</td>
          <td>${station.stationstatus}</td>
        </tr>`;
        tableBody.append(row);
      });
    }

    $(document).ready(function() {
      // Check if the user has a session token
      const sessionToken = document.cookie.includes('session_token');
      if (!sessionToken) {
        location.href = '/';
      }
      getStations();

      $("#createrouteForm").submit(function(event) {
        event.preventDefault(); // Prevent the form from submitting normally

        const routename = $('#name').val();
        const newStationId = $('#newStationId').val();
        const connectedStationId = $('#connectedStationId').val();

        const data = {
          routeName: routename,
          newStationId: newStationId,
          connectedStationId: connectedStationId
        };

        $.ajax({
          type: "POST",
          url: '/api/v1/route',
          data: JSON.stringify(data),
          contentType: 'application/json',
          success: function(serverResponse) {
            if (serverResponse) {
              alert('Route created successfully');
              location.href = '/createRoute';
            }
          },
          error: function(errorResponse) {
            if (errorResponse) {
              alert(`Error creating route: ${errorResponse.responseText}`);
            }
          }
        });
      });
    });
  </script>
</body>
</html>