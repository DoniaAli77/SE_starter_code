<!DOCTYPE html>
<html>
  <head>
    <title>Routes</title>
    <link rel="stylesheet" href="/styles/bootstrap.min.css" />
    <link rel="stylesheet" href="/styles/style.css" />
    <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
  </head>
  <body>
    <div>
      <div>
        <nav class="navbar navbar-inverse" style="padding-left:130px;">
          <ul class="nav navbar-nav">
            <li><a href="/dashboard">Home</a></li>
            <li class="active"><a href="/routes">Routes</a></li>
            <li><a href="/createRoute">Create</a></li>

          </ul>
        </nav>
      </div>
      <br />
      
      <table class="table">
        <thead>
          <tr>
            <th scope="col">id</th>
            <th scope="col">routename</th>
            <th scope="col">fromstationid</th>
            <th scope="col">tostationid</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody id="tbody">
          {{#routes}} 
            <tr id="row_{{id}}">
              <td>{{id}}</td>
              <td id="routeName_{{id}}">{{routename}}</td>
              <td>{{fromstationid}}</td>
              <td>{{tostationid}}</td>
              <td>
                <button class="btn btn-primary" onclick="updateRouteName('{{id}}')">Update</button>
                <button onclick="deleteStation('{{id}}')" class="btn btn-danger">Delete</button>
              </td>
            </tr>
          {{/routes}}
        </tbody>
      </table>
    </div>

    <script>
      function deleteStation(routeId) {
        if (confirm("Are you sure you want to delete this station?")) {
          $.ajax({
            url: "/api/v1/route/" + `${routeId}`,
            type: "DELETE",
            success: function () {
              // Remove the deleted station row from the table
              $("#row_" + routeId).remove();
            },
            error: function (xhr, status, error) {
              console.error("Error deleting station:", error);
            }
          });
        }
      }

      function updateRouteName(routeId) {
        const routenameElement = document.getElementById('routeName_' + routeId);
        const currentroutename = routenameElement.innerText;

        const newroutename = prompt('Enter new route name:');

        if (newroutename !== null && newroutename.trim() !== '') {
          // Update the displayed route name immediately
          routenameElement.innerText = newroutename;

          // Perform AJAX request to update the route
          $.ajax({
            url: '/api/v1/route/' + `${routeId}`,
            type: 'PUT',
            data: { routename: newroutename },
            success: function(response) {
              console.log(response);
              // Handle success response
              alert('Route updated successfully.');
            },
            error: function(xhr, status, error) {
              console.log(xhr.responseText);
              // Handle error response
              alert('Error updating route. Please try again.');
              // Revert to the previous route name
              routenameElement.innerText = currentroutename;
            }
          });
        }
      }
    </script>
  </body>
</html>
