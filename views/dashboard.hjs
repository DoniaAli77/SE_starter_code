<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
  <link rel="stylesheet" href="/styles/bootstrap.min.css" />
  <link rel="stylesheet" href="/styles/style.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
  <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
  <script src="/js/bootstrap.min.js" type="text/javascript"></script>
  <style>
    .navbar-custom {
      background-color: #333;
      border-color: #333;
      border-radius: 0;
    }

    .navbar-custom .navbar-nav > li > a {
      color: #fff;
      font-weight: bold;
    }

    .navbar-custom .navbar-nav > li > a:hover,
    .navbar-custom .navbar-nav > li > a:focus {
      background-color: #000;
    }

    .navbar-custom .navbar-nav > .active > a,
    .navbar-custom .navbar-nav > .active > a:hover,
    .navbar-custom .navbar-nav > .active > a:focus {
      background-color: #000;
    }

    .navbar-custom .navbar-toggle {
      border-color: #000;
    }

    .navbar-custom .navbar-toggle:hover,
    .navbar-custom .navbar-toggle:focus {
      background-color: #000;
    }

    .navbar-custom .navbar-toggle .icon-bar {
      background-color: #fff;
    }

    .navbar-custom .navbar-collapse,
    .navbar-custom .navbar-form {
      border-color: #000;
    }

    .navbar-custom .dropdown-menu > li > a {
      color: #333;
      font-weight: bold;
    }

    .navbar-custom .dropdown-menu > li > a:hover,
    .navbar-custom .dropdown-menu > li > a:focus {
      background-color: #000;
      color: #fff;
    }

    /* Icon Styles */
    .navbar-custom .navbar-nav > li > a > i {
      margin-right: 5px;
    }

    .search-container {
      margin-top: 20px;
      text-align: right;
      margin-right: 10px; /* Adjust margin-right as needed */
    }

    .search-container input[type="text"] {
      width: 300px;
      padding: 10px;
      border-radius: 5px;
      border: none;
    }

    .search-container button {
      padding: 10px 15px;
      border-radius: 5px;
      border: none;
      background-color: #3a4249;
      color: #fff;
      cursor: pointer;
    }

    .search-container button i {
      color: #f9f4f4;
    }

    body {
      background-image: url('images/metro.jpg');
      background-repeat: no-repeat;
      background-size: cover;
    }
  </style>
  <script>
    $(document).ready(function() {
      const sessionToken = document.cookie.includes("session_token");
      if (!sessionToken) {
        location.href = "/";
      }

      // Search functionality
      $(".search-container button").click(function() {
        var searchValue = $(".search-container input[type='text']").val().toLowerCase();

        // Loop through the navbar links
        $(".navbar-custom .navbar-nav a").each(function() {
          var linkText = $(this).text().toLowerCase();
          if (linkText.includes(searchValue)) {
            window.location.href = $(this).attr("href");
            return false; // Stop the loop after finding the first matching link
          }
        });
      });
    });
  </script>
</head>
<body>
  <div>
    <div>
      <nav class="navbar navbar-custom" style="padding-left: 130px;">
        <div class="container-fluid">
          <div class="navbar-header">
            <button
              type="button"
              class="navbar-toggle"
              data-toggle="collapse"
              data-target="#myNavbar"
            >
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav">
              <li class="active"><a href="/dashboard"><i class="fas fa-home"></i> Home</a></li>
              <li><a href="/resetpassword"><i class="fas fa-key"></i> Reset Password</a></li>
              <li><a href="/"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
            </ul>
            {{#isAdmin}}
              <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <i class="fas fa-cog"></i> Admin Options <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu">
                    <li><a href="/stations_example"><i class="fas fa-building"></i> Manage Stations</a></li>
                    <li><a href="/routes"><i class="fas fa-building"></i> Manage Routes</a></li>
                    <li><a href="/managezones"><i class="fas fa-map-marker-alt"></i> Manage Zones</a></li>
                    <li><a href="/refund_requests"><i class="fas fa-money-bill-wave"></i> Refund Requests</a></li>
                    <li><a href="/manage-senior"><i class="fas fa-money-bill-wave"></i> Senior Requests</a></li>
                  </ul>
                </li>
              </ul>
            {{/isAdmin}}
            {{#isUser}}
              <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <i class="fas fa-user"></i> User Options <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu">
                    <li><a href="/tickets">Tickets </a></li>
                    <li><a href="/usersubscription">View Subscriptions </a></li>
                    <li><a href="/userefundrequests">Refund Requests</a></li>
                    <li><a href="/senior_request">Request senior</a></li>
                    <li><a href="/prices">Check Price</a></li>
                    <li><a href="/subscriptions">Your Subscription Table</a></li>
                    <li><a href="/rides">Rides</a></li>
                  </ul>
                </li>
              </ul>
            {{/isUser}}
          </div>
        </div>
      </nav>
    </div>
    <div class="search-container">
      <input type="text" placeholder="Search..." />
      <button type="submit"><i class="fas fa-search"></i></button>
    </div>
  </div>
</body>
</html>
