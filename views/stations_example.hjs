<!DOCTYPE html>
<html>
  <head>
    <title>Stations</title>
    <link rel="stylesheet" href="/styles/bootstrap.min.css" />
    <link rel="stylesheet" href="/styles/style.css" />
    <style>
      /* Custom CSS for table design */
      .table-container {
        width: 80%;
        margin: 30px auto;
      }

      .table-container table {
        width: 100%;
        border-collapse: collapse;
      }

      .table-container th,
      .table-container td {
        padding: 10px;
        text-align: center;
      }

      .table-container thead {
        background-color: #f8f9fa;
      }

      .table-container tbody tr:nth-child(even) {
        background-color: #f8f9fa;
      }

      .table-container tbody tr:hover {
        background-color: #e9ecef;
      }

      .table-container th {
        background-color: #343a40;
        color: #fff;
      }
    </style>
    <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    <script>
      function deleteStation(stationId) {
        if (confirm("Are you sure you want to delete this station?")) {
          $.ajax({
            url: "/api/v1/station/" + stationId,
            type: "DELETE",
            success: function () {
              // Remove the deleted station row from the table
              $("#row_" + stationId).remove();
            },
            error: function (xhr, status, error) {
              console.error("Error deleting station:", error);
            }
          });
        }
      }
    </script>
  </head>
  <body>
    <div>
      <div>
        <nav class="navbar navbar-inverse" style="padding-left:130px;">
          <ul class="nav navbar-nav">
            <li><a href="/dashboard">Home</a></li>
            <li class="active"><a href="/stations_example">Stations</a></li>
            {{!-- <li><a href="/createstations">Create Stations</a></li> --}}
          </ul>
        </nav>
      </div>
      <br />
      {{#isAdmin}}
      <div style="position:absolute; right: 12px;;">
        <a href="/createstations" class="btn btn-primary">Create station</a>
        <br />
      </div>
      {{/isAdmin}}
      <div class="table-container">
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Type</th>
              <th>Position</th>
              <th>Status</th>
              {{#isAdmin}}
              <th>Actions</th>
              {{/isAdmin}}
            </tr>
          </thead>
          <tbody>
            {{#stations}}
            <tr id="row_{{id}}">
              <td>{{id}}</td>
              <td>{{stationname}}</td>
              <td>{{stationtype}}</td>
              <td>{{stationposition}}</td>
              <td>{{stationstatus}}</td>
              {{#isAdmin}}
              <td>
                <a href="/updatestation/{{id}}" class="btn btn-primary">Update</a>
                <button onclick="deleteStation({{id}})" class="btn btn-danger">Delete</button>
              </td>
              {{/isAdmin}}
            </tr>
            {{/stations}}
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
